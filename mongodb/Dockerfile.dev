ARG MONGO_VERSION=7.0
FROM mongo:${MONGO_VERSION}-jammy

SHELL ["/bin/bash", "-c"]
USER root

RUN set -euxo pipefail \
  && apt-get update -o Acquire::Retries=5 \
  && DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
       ca-certificates curl gnupg \
  && rm -f /etc/apt/sources.list.d/mongodb-org-*.list \
  && curl -fsSL https://pgp.mongodb.com/server-7.0.asc \
     | gpg --batch --yes --dearmor -o /usr/share/keyrings/mongodb-server-7.0.gpg \
  && chmod 0644 /usr/share/keyrings/mongodb-server-7.0.gpg \
  && echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/mongodb-server-7.0.gpg] https://repo.mongodb.org/apt/ubuntu jammy/mongodb-org/7.0 multiverse" \
     > /etc/apt/sources.list.d/mongodb-org-7.0.list \
  && apt-get update -o Acquire::Retries=5 \
  && DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
       mongodb-database-tools mongodb-mongosh \
  && rm -rf /var/lib/apt/lists/* \
  && mongosh --version \
  && mongodump --version
