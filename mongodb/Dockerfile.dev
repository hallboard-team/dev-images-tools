ARG MONGO_VERSION=7.0
FROM mongo:${MONGO_VERSION}-jammy

ARG MONGO_TOOLS_VERSION=7.0

SHELL ["/bin/bash", "-c"]
USER root

RUN set -euxo pipefail \
  && apt-get update -o Acquire::Retries=5 \
  && DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
       ca-certificates \
       curl \
       gnupg \
  && install -d -m 0755 /etc/apt/keyrings \
  && rm -f /etc/apt/sources.list.d/mongodb-org-*.list /etc/apt/sources.list.d/mongodb*.list \
  && curl -fsSL "https://pgp.mongodb.com/server-${MONGO_TOOLS_VERSION}.asc" \
     | gpg --batch --yes --no-tty --dearmor -o /etc/apt/keyrings/mongodb.asc \
  && chmod 0644 /etc/apt/keyrings/mongodb.asc \
  && echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/mongodb.asc] https://repo.mongodb.org/apt/ubuntu jammy/mongodb-org/${MONGO_TOOLS_VERSION} multiverse" \
     > /etc/apt/sources.list.d/mongodb-org-${MONGO_TOOLS_VERSION}.list \
  && apt-get update -o Acquire::Retries=5 \
  && DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
       mongodb-mongosh \
       mongodb-database-tools \
  && rm -rf /var/lib/apt/lists/* \
  && mongosh --version \
  && mongodump --version
